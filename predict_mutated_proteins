

PDB=.pdb
CLEAN=_clean

SEQDIR=$vini_dir/genes/sequences

echo -n "Cleaning pdb files with Chimera. Please wait, this may take a while."
while read -r line
do
    grep -v "HETATM" ${SEQDIR}/$line$PDB > $WORKDIR/tmp
    grep -v "CONECT" $WORKDIR/tmp > ${SEQDIR}/$line$PDB
    sh chimera_script ${line} BNZ
    if  [ -e protein_clean.pdb ]
    then
        mv protein_clean.pdb ${vini_dir}/genes/pdb_files/$line$PDB
        rm $line$CLEAN$PDB #cleanup
    else
	mv ${SEQDIR}/$line$PDB ${vini_dir}/genes/pdb_files/$line$PDB
    fi
done < predict
echo "done."

rm log ligand_wH.pdb predict #cleanup
