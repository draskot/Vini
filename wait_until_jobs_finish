
# wait_until_jobs_finish

job_status=`cat $WORKDIR/job_status`
NULL=0

echo $USER "jobs remaining: "
while true
do
     sleep 1
     eval $job_status -u $USER > $WORKDIR/temp2_buf
     grep $USER $WORKDIR/temp2_buf > $WORKDIR/tmp
     lines=`wc -l < $WORKDIR/tmp`
     echo -n $lines ; echo -n " "
     if  [ $lines -eq $NULL ]
     then
	 break
     fi 
done
rm -f $WORKDIR/temp2_buf $WORKDIR/tmp
echo "Done."
