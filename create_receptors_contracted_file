
WORKDIR=`cat workdir`
rm -f $WORKDIR/receptors_contracted; echo -n "Contracting receptor  file..."
na=NA
x=`wc -l $WORKDIR/receptors_expanded | awk '{print $1}'`


for (( lineno=1; lineno<=$x; lineno++ ))
do
    line=`head -"$lineno" $WORKDIR/pdb_file_descriptor | tail -1`
    echo $line
    pdb_id=`echo $line | awk '{print $3}'`
    echo "pdb_id na:" $pdb_id $na
    if  [ $pdb_id != $na ]
    then
        echo $line >> $WORKDIR/receptors_contracted
    fi
done
echo "done."

rm -f $WORKDIR/pdb_file_descriptor

