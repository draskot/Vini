
# jobs_control_script
# input parameters: job_status max_jobs

job_status=$1 ; max_jobs=$2

$job_status -u $USER > $WORKDIR/temp_buf #control the max number of concurrent jobs allowed
sed -i '1d' $WORKDIR/temp_buf
JOBS=`wc -l $WORKDIR/temp_buf | awk '{print $1}'`

echo "nr. jobs running:" $JOBS
while [ $JOBS -gt $max_jobs  ]
do
    $job_status -u $USER > $WORKDIR/temp_buf 
    # for SLURM
    sed -i '1d' $WORKDIR/temp_buf
    JOBS=`wc -l $WORKDIR/temp_buf | awk '{print $1}'`
done
rm -f $WORKDIR/temp_buf
