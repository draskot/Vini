

if [[ -e $WORKDIR/cpu_partition ]] && [[ -e $WORKDIR/gpu_partition ]]  && [[ -e $WORKDIR/largemem_partition ]]
then
    cpu_partition=`cat $WORKDIR/cpu_partition`
    echo "Vini is using $cpu_partition partition for its CPU jobs."
    
    gpu_partition=`cat $WORKDIR/gpu_partition`
    echo "Vini is using $gpu_partition partition for its GPU jobs."

    largemem_partition=`cat $WORKDIR/largemem_partition`
    echo "Vini is using $smp_partition partition for its large memory (>512GB) jobs."
else
    echo "You will need to setup partitions now."
    echo "Available queues are:" 
    sinfo -s

    read -p  "Enter the name of partition with CPU nodes:" cpu_partition
    read -p "Enter the name of partition with GPU nodes:" gpu_partition
    read -p  "Enter the name of partition with large memory nodes:" largemem_partition

    echo ${cpu_partition} > $WORKDIR/cpu_partition
    echo ${gpu_partition} > $WORKDIR/gpu_partition    
    echo ${largemem_partition} > $WORKDIR/largemem_partition
fi
