job_status=$1
max_jobs=$2
user=`echo ${USER:0:8}` #for long partition names last characters may be lost

while true
do
    $job_status | grep $user > job_list
    jobs=`wc -l < job_list`
    echo "nr. jobs running:" $jobs
    if [ $jobs -lt ${max_jobs} ]
    then
        break
    fi
    sleep 1
done
